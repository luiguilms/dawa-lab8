<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>CRUD de Usuarios</title>
  <style>
    /* Agregue aquí sus estilos personalizados */
  </style>
</head>
<body class="container">
    <h1>Usuarios</h1>
    <form action="/users" method="POST" class="mt-3">
      <div class="form-group">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" class="form-control" required minlength="8" pattern="[a-zA-Z0-9]+">
      </div>
      <button type="submit" class="btn btn-primary">Crear Usuario</button>
    </form>
  <hr>
  <h2>Lista de Usuarios</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user) => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/users/edit/<%= user._id %>">Editar</a>
            <a href="/users/delete/<%= user._id %>">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
